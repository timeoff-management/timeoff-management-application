
<div class="modal fade" id="{{container_id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
    <form method="POST" action="{{leave_modal_form_action}}">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">Book time off</h4>
      </div>
      <div class="modal-body">

          {{# if_equal employees.length 1 }}{{else}}
          <div class="form-group">
            <label for="employee" class="control-label">For employee:</label>
            <select class="form-control" id="employee" name="user">
                {{#each employees}}
                <option value="{{@index}}" {{# if_equal this.id ../logged_user.id }}selected="selected"{{/if_equal}}>{{this.full_name}}</option>
                {{/each}}
            </select>
          </div>
          {{/if_equal}}

          <div class="form-group">
            <label for="leave_type" class="control-label">Leave type:</label>
            <select class="form-control" id="leave_type" name="leave_type">
            {{# each company.leave_types}}
                <option value={{@index}}>{{this.name}}</option>
            {{/each}}
            </select>
          </div>

          <div class="form-group">
            <label for="from" class="control-label">From:</label>
            <div class="row">
              <div class="col-md-7">
                <input type="text" class="form-control" id="from" data-provide="datepicker" data-date-format="yyyy-mm-dd" value="{{as_date booking_start}}" name="from_date">
              </div>
              <div class="col-md-5">
                <select class="form-control" name="from_date_part">
                  <option value="1" selected="selected">All day</option>
                  <option value="2">Morning</option>
                  <option value="3">Afternoon</option>
                </select>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="to" class="control-label">To:</label>
            <div class="row">
              <div class="col-md-7">
                <input type="text" class="form-control" id="to" data-provide="datepicker" data-date-format="yyyy-mm-dd" value="{{as_date booking_end}}" name="to_date">
              </div>
              <div class="col-md-5">
                <select class="form-control" name="to_date_part">
                  <option value="1" selected="selected">All day</option>
                  <option value="2">Morning</option>
                  <option value="3">Afternoon</option>
                </select>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="reason-text" class="control-label">Reason (optional):</label>
            <textarea class="form-control" id="reason-text" name="reason"></textarea>
          </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success">Send request</button>
      </div>
    </form>
    </div>
  </div>
</div>


