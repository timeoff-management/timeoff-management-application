
<div class="modal fade" id="{{container_id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">Book time off</h4>
      </div>
      <div class="modal-body">
        <form>

          {{!--
            For admin users it is possible to bock time off for any user

            TODO
            If current user is an approver for any departments, she should be
            able to book leaves for employes from that departments

          --}}
          {{# if logged_user.admin }}
          <div class="form-group">
            <label for="employee" class="control-label">For employee:</label>
            <select class="form-control" id="employee">
                {{#each employees}}
                <option value="{{@index}}">{{this.full_name}}</option>
                {{/each}}
            </select>
          </div>
          {{/if}}

          <div class="form-group">
            <label for="leave_type" class="control-label">Leave type:</label>
            <select class="form-control" id="leave_type">
            {{# each company.leave_types}}
                <option value={{@index}}>{{this.name}}</option>
            {{/each}}
            </select>
          </div>

          <div class="form-group">
            <label for="from" class="control-label">From:</label>
            <div class="row">
              <div class="col-md-7">
                <input type="text" class="form-control" id="from" data-provide="datepicker" data-date-format="yyyy-mm-dd">
              </div>
              <div class="col-md-5">
                <select class="form-control">
                  <option value="">All day</option>
                  <option value="1">Morning</option>
                  <option value="2">Afternoon</option>
                </select>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="to" class="control-label">To:</label>
            <div class="row">
              <div class="col-md-7">
                <input type="text" class="form-control" id="to" data-provide="datepicker" data-date-format="yyyy-mm-dd">
              </div>
              <div class="col-md-5">
                <select class="form-control">
                  <option value="">All day</option>
                  <option value="1">Morning</option>
                  <option value="2">Afternoon</option>
                </select>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="reason-text" class="control-label">Reason (optional):</label>
            <textarea class="form-control" id="reason-text"></textarea>
          </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-success">Send request</button>
      </div>
    </div>
  </div>
</div>


