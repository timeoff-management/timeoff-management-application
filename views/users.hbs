
{{> header }}

<h1>Staff</h1>

{{> show_flash_messages }}

<div class="row">
    <div class="col-md-3">{{company.name}}'s staff</div>
    <div class="col-md-3 col-md-offset-6">
        <button type="button" class="pull-right btn btn-info" id="add_new_department_btn">Add new</button>
    </div>
</div>

<div class="row">&nbsp;</div>

<form id="delete_form" method="post" action="/settings/departments/delete/"></form>

<form method="post" action="/settings/departments/">

<div class="row">
<div class="col-md-2">
    <p>Departments</p>
    <ul>
    {{#each company.departments}}
        <li>{{this.name}}</li>
    {{/each}}
    </ul>
</div>
<div class="col-md-10">
    <div class="row">
        <div class="col-md-6">Name</div>
        <div class="col-md-3">Department</div>
        <div class="col-md-1">Status</div>
    </div>

    {{# each users}}
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-md-6">{{this.name}} {{this.lastname}}</div>
        <div class="col-md-3">{{this.departmentId}}</div>
        <div class="col-md-1">{{this.activated}}</div>
        <div class="col-md-1 col-md-offset-1">
            <button type="button" class="close pull-right" aria-label="Close" value="{{@index}}"><span aria-hidden="true">&times;</span></button>
        </div>
    </div>
    {{/each}}

</div>
</div>

</form>

<div class="row">&nbsp;</div>

{{> footer }}
