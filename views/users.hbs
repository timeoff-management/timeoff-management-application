
{{> header }}

<h1>Staff</h1>

{{> show_flash_messages }}

<div class="row">
    <div class="col-md-3 lead">{{company.name}}'s staff</div>
    <form id="add_new_user_frm" method="get" action="/users/add/">
        <div class="col-md-3 col-md-offset-6">
        <button type="submit" class="pull-right btn btn-info" id="add_new_department_btn">Add user</button>
        </div>
    </form>
</div>

<div class="row">&nbsp;</div>

<div class="row">
    <div class="content">
        <div class="col-md-3">
            <p class="specific">Departments</p>
            <ul class="all-departments">
                <li><a href="/users/">All</a></li>
{{#each company.departments}}
                <li><a href="/users/?department={{this.id}}">{{this.name}}</a></li>
{{/each}}
            </ul>
        </div>

        <div class="col-md-9">
            <div class="row-header">
                <div class="row">
                    <div class="col-md-5">Name</div>
                    <div class="col-md-4">Department</div>
                    <div class="col-md-2 pull-right">Days used</div>
                </div>
            </div>
    {{# each users}}
                <div class="row">&nbsp;</div>
                <div class="row row-users">
                    <div class="col-md-5"><a href="/users/edit/{{this.id}}/">{{this.full_name}}</a></div>
                    <div class="col-md-4 user_department">{{this.department.name}}</div>
                    <div class="col-md-2 pull-right">{{this.calculate_number_of_days_taken_from_allowence}}</div>
                </div>
    {{/each}}
            </div>
        </div>

    </div>
</div>



<div class="row">&nbsp;</div>

{{> footer }}
