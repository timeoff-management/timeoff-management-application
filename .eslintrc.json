{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
      "camelcase": 0,
      "space-before-function-paren": 0,
      "arrow-body-style": ["error", "as-needed"],
      "prefer-arrow-callback": [
        "error",
        { "allowNamedFunctions": true }
      ],
      "func-style": [
        "error",
        "declaration",
        { "allowArrowFunctions": true }
      ]

    }
}
